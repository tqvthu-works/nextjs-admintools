generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id                BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  name              String    @db.VarChar(255)
  email             String    @unique(map: "users_email_unique") @db.VarChar(255)
  email_verified_at DateTime? @db.Timestamp(0)
  password          String    @db.VarChar(255)
  status            Boolean   @default(true)
  remember_token    String?   @db.VarChar(100)
  created_at        DateTime? @db.Timestamp(0)
  updated_at        DateTime? @db.Timestamp(0)
  @@map("users")
}
model Shop {
  id                     BigInt      @id @default(autoincrement()) @db.UnsignedBigInt
  name                   String?     @db.VarChar(255)
  shopify_domain         String      @db.VarChar(255)
  domain                 String?     @db.VarChar(255)
  owner                  String?     @db.VarChar(255)
  email                  String?     @db.VarChar(255)
  phone                  String?     @db.VarChar(255)
  timezone               String?     @db.VarChar(255)
  country                String?     @db.VarChar(30)
  currency               String?     @db.VarChar(30)
  access_token           String?     @db.VarChar(255)
  created_at             DateTime?   @db.Timestamp(0)
  updated_at             DateTime?   @db.Timestamp(0)
  theme_id               Int?        @db.Int
  storefront_access_token String?     @db.VarChar(255)
  money_format           String?     @db.VarChar(255)
  money_with_currency_format String? @db.VarChar(255)
  uninstalled_at         DateTime?   @db.Timestamp(0)
  plan_name              String?     @db.VarChar(100)
  status                 Boolean     @default(true)
  used_v3                Boolean     @default(false)
  limit_blocks_by_plan   Boolean     @default(false)
  mobile_auth            Boolean     @default(false)
  started_free_trial     Boolean     @default(false)
  app_plan               String?     @db.VarChar(100)
  language               String      @default("en") @db.VarChar(100)
  is_test                Boolean     @default(false)
  publish_changes        Boolean     @default(false)
  in_app_notify          Boolean     @default(true)
  is_onboarding          Boolean     @default(false)
  trial_type             String      @default("shopify") @db.VarChar(50)
  note                   String?     @db.Text
  @@map("shops")
}
